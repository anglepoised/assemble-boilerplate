/*------------------------------------*\
  #HIDE
\*------------------------------------*/


/**
 * Hide visually and from screen readers
 */
hide()
  display: none !important
  visibility: hidden


/**
 * Hide only visually, but have it available for screen readers
 */
visuallyhidden()
  border: 0
  clip: rect(0 0 0 0)
  height: 1px
  margin: -1px
  overflow: hidden
  padding: 0
  position: absolute
  width: 1px
